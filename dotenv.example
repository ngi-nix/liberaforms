SECRET_KEY = 'super secret key'

ROOT_USERS = ['your_email_address@example.com']
DEFAULT_LANGUAGE = 'en'
TMP_DIR = '/tmp'

## Database
DB_HOST=localhost
DB_NAME=liberaforms
DB_USER=liberaforms
# Use a strong password
DB_PASSWORD=""

# Maximum valid age for password resets, invitations, ..
# 86400 seconds = 24h
TOKEN_EXPIRATION = 604800

# Session management (see docs/INSTALL)
SESSION_TYPE = "filesystem"
#SESSION_TYPE = "memcached"
#MEMCACHED_HOST=
#SESSION_KEY_PREFIX=

# See docs/upload.md
ENABLE_UPLOADS = False
# 1024 * 500 = 512000 = 512 KB
MAX_MEDIA_SIZE=512000
MAX_FILE_UPLOAD_SIZE=512000
ENABLE_REMOTE_STORAGE=False

# Logging [watched|stream]
LOG_TYPE=watched
LOG_DIR=./logs

# FLASK_ENV
# this sets the Flask running mode
# can be 'production' or 'development'
FLASK_ENV=production

# FLASK_CONFIG
# this sets the config to use (see config.py)
# can be 'production' or 'development'
FLASK_CONFIG=production
